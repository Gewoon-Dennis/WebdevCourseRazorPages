@page
@model Exercises.Pages.Lesson1.Assignment3

@{
    Layout = null;
}

<div>
    <p id="result">@Model.result</p>
</div>

<form method="post" id="calculatorForm">
    <input type="hidden" name="tussenStop" value="@Model.result">
    <input type="number" id="input" name="input">
    <button name="addBtn" id="addBtn" type="submit" asp-page-handler="Add">+</button>
    <button name="subBtn" id="subBtn" type="submit" asp-page-handler="Subtract">-</button>
    <button name="mulBtn" id="mulBtn" type="submit" asp-page-handler="Multiply">*</button>
    <button name="divBtn" id="divBtn" type="submit" asp-page-handler="Divide">/</button>
</form>


